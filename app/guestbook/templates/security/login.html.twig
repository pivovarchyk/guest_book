{% extends "base.html.twig" %}

{% block title %}
    Гостевая книга
{% endblock %}

{% block login %}
    {% include 'user/form-login.html.twig' %}
{% endblock %}

{% block contentForm %}
    {% if error %}
        <div class="ml-2"><p class="text-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
    {% endif %}

    <div id="form" class="container">
        <form method="post">
            <div class="form-row mx-2">
                <div class="form-group col-6 text-dark">
                    <label for="username" class="required control-label">Имя пользователя</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" class="form-control"/>
                </div>
                <div class="form-group col-6 text-dark">
                    <label for="password" class="required control-label">Пароль</label>
                    <input type="password" id="password" name="_password" class="form-control" />
                </div>
            </div>
            <div class="form-group mx-4 float-right">
                <button type="submit" class="btn-primary btn pull-right">Войти</button>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src='https://www.google.com/recaptcha/api.js'></script>
    <script src="{{ asset('build/app.js') }}"></script>
    <script src="{{ asset('build/vendors~app.js') }}"></script>
    <script src="{{ asset('build/runtime.js') }}"></script>
{% endblock %}
